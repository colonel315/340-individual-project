@using Library_System.Models
@model IEnumerable<Library_System.Models.CheckOut>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Search Book
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover"
                       data-page-length="5" id="dataTables">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ItemBase.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Users.LastName)
                            </th>
                            <th>
                                Late Fee
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsReserve)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemBase.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Users.LastName)
                                </td>
                                <td>
                                    $@item.lateFee().00
                                </td>
                                <td>
                                    @if (item.IsReserve)
                                    {
                                        <i class="fa fa-check fa-fw"></i> @item.getCheckoutDate()
                                    }
                                    else
                                    {
                                        <i class="fa fa-times"></i>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>