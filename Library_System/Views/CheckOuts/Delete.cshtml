@model Library_System.Models.CheckOut

@{
    ViewBag.Title = "Delete";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Check In</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-sm-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ItemBase.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ItemBase.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Users.LastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.LastName)
                </dd>

                <dt>
                    Late Fee
                </dt>

                <dd>
                    $@Model.lateFee().00
                </dd>
            </dl>

            @using (Html.BeginForm())
